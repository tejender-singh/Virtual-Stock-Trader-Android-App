<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jeevika.myhelper.Help_6"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/helpback">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/trade"
            android:fitsSystemWindows="true"
            />

        <com.software.shell.fab.ActionButton
            android:id="@+id/action_button_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="next"

            fab:type="DEFAULT"
            fab:button_color="@color/colorPrimary"
            fab:button_colorPressed="@color/colorPrimaryDark"
            fab:image="@drawable/ic_next"
            fab:image_size="24dp"
            fab:shadow_color="#757575"
            fab:shadow_radius="1.0dp"
            fab:shadow_xOffset="0.5dp"
            fab:shadow_yOffset="1.0dp"
            fab:stroke_color="@color/fab_material_blue_grey_500"
            fab:stroke_width="1.0dp"
            fab:button_colorRipple="@color/fab_material_black"
            fab:rippleEffect_enabled="false"
            fab:shadowResponsiveEffect_enabled="true"
            fab:show_animation="@anim/fab_roll_from_down"
            fab:hide_animation="@anim/fab_roll_to_down"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="69dp" />
    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->



    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        cardview:cardElevation="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="15dp"
        cardview:cardCornerRadius="5dp"
        android:id="@+id/cv6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="20dp"
            android:textColor="#0A2E36"
            android:id="@+id/hometv2"
            android:text="The Trade allows the users to buy as well as sell the real time NSE stocks using the Virtual Money provided."
            android:paddingLeft="12dp"
            android:layout_gravity="center_horizontal"
            />

    </android.support.v7.widget.CardView>
</LinearLayout>

</RelativeLayout>
